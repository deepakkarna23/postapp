<div class="prof_header">

  <div class="row">
    <div class="col-xs-4">
      <%= @user.name %>
    </div>
    <%= @user.description %>

    <span class="count"><%= @user.posts.count %></span> posts

<div class="prof_post_box">
  <div class="row">

    <% @user.posts.each do |post| %>
      <div class="col-xs-6">
        <%= post.description %>
      </div>
    <% end %>
  </div>
</div>
