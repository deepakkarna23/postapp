<section class="posts">
  <% @posts.each do |post| %>
  <div class="post_box">

    <div class="post_header">
      <%= post.user.name %>
    </div>

    <div class="post_body">
      <%= link_to post.user.name, posts_path%><%= post.description %>
      <span class="timestamp pull-right"><%= distance_of_time_in_words(DateTime.now, post.created_at) %> ago</span>
    </div>

    <div class="content btn-group btn-group-sm">
      <ul class="list-inline">
        <li><%= link_to 'View Post', post_path(post.id), class: 'btn btn-default btn-block' %></li>
        <% if post.user == logged_in? %>
          <li><%= link_to 'Edit Post', edit_post_path(post.id), class: 'btn btn-default btn-block' %></li>
          <li><%= link_to 'Delete Post', post_path(post.id), method: :delete, class: 'btn btn-default btn-block' %></li>
        <% end %>
      </ul>
    </div>

    <div class="post_comments">
        <% post.comments.each do |comment| %>
          <%= link_to comment.user.name,  user_path(comment.user_id) %> <%= comment.text %>
        <% end %>
    </div>
    <hr>
    <% if logged_in? %>
      <%= simple_form_for Comment.new, url: post_comments_path(post), method: :post do |f| %>
        <%= f.input :text, label: 'Comment', placeholder: 'Add a comment...' %>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    <% end %>
  </div>
  <% end %>
</section>
